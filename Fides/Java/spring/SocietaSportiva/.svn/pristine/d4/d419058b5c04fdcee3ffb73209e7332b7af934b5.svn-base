<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
     	<title>Società Sportiva</title>
        <link href="<c:url value='/resources/style.css' />" rel="stylesheet"></link>
    </head>
<body>
	<ul>
			<li><a class="active" href="/SocietaSportiva">Home</a></li>
			<li><a href="/SocietaSportiva/login">Login</a></li>
			<li><a href="/SocietaSportiva/clienti">Clienti</a></li>
			<li><a href="/SocietaSportiva/partite">Partite</a></li>
			<li><a href="/SocietaSportiva/stadi">Stadi</a></li>
	</ul>
    <div class="container" align="center">
        <h1>Stadi</h1>
        <h3><a href="nuovoStadio">Nuovo Stadio</a></h3>
        
        <table class="data">
          	<tr class="descriptor">
          		<th>N</th>       
            	<th>ID</th>       
            	<th>Gestore</th>
            	<th>Nome</th>
            	<th>Indirizzo</th>
            	<th>Città</th>
            	<th>Capienza</th>
            	<th>Scheda</th>
            	<th>Aggiorna</th>
            	<th>Elimina</th>
            </tr>
            <c:forEach var="stadio" items="${listStadi}" varStatus="status" >
            <tr>
            	<td>${status.index + 1}</td>
                <td>${stadio.idStadio}</td>
                <td>${stadio.idGestoreStadioFK}</td>
                <td>${stadio.nome}</td>
                <td>${stadio.indirizzo}</td>
                <td>${stadio.citta}</td>
                <td>${stadio.capienza}</td>
                <td><a href="/SocietaSportiva/schedaStadio">Scheda</a></td>
                <td><a href="/SocietaSportiva/aggStadio?id_stadio=${stadio.idStadio}">Aggiorna</a></td>
                <td><a href="/SocietaSportiva/deleteStadio?id_stadio=${stadio.idStadio}">Elimina</a></td>
            </tr>
            </c:forEach>          
        </table>
    </div>
</body>
</html>
