	/* Handler per inserire/aggiornare un cliente */
	@RequestMapping(value = "/updateCliente", method = RequestMethod.POST)
	public ModelAndView updateCliente(@ModelAttribute Cliente cliente, HttpServletRequest request) {
			Login login = new Login();
			Role role = new Role();
			login.setPassword(request.getParameter("psw"));
			login.setUsername(cliente.getUsername());
			role.setRoleId(0);
			role.setUsername(cliente.getUsername());
			role.setUserRole("ROLE_USER");
		if (cliente.getIdCliente() > 0) {
			clienteDAO.update(cliente);
			loginDAO.update(login);
			roleDAO.update(role);
		}
		else {
			clienteDAO.create(cliente);
			loginDAO.create(login);
			roleDAO.create(role);
		}
		
		return new ModelAndView("redirect:/partite");
	}
	
