body {
	background-color : #f1f1c1;
	color : navy;
}

ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
}

li {
    float: left;
}

th, td, tr {
	border : 1px solid #aaa;
	padding : 5px;
}

li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

a:hover:not(.active) {
    background-color: #111;
}

.active {
background-color:#4CAF50;
}

.data {
	border : 1px solid #aaa;
	border-collapse : collapse;
	
}

.descriptor {
	background-color : #b1f1f1;
	color : white;
}

.container {
	margin-top: 60px;
}

img#logo {
	width: 25%;
	height: 25%;
}

input[type=number] {
    width: 196.832px;
    height: 20px;
    padding-top: 0px;
    padding-bottom: 0px;
    padding-left: 1px;
    margin-top: 15px;
}

#events {
	font-size:35px;
	color: red;
	font-family: helvetica;
	margin: 15px;
}

#ordine {
	margin-left: 15px;
}

#tblCrono {
	display: none;
}
#tblCresc {
	display: none;
}
#tblId {
	display: none;
}
