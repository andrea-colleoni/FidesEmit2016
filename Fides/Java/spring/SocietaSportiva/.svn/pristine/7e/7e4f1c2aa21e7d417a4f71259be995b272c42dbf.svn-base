/*funzione per far comparire le tabelle "PROSSIMI EVENTI" in index.jsp
 * versione spartana per avere l'effetto desiderato
 * in attesa di implementare la chiamata al server con AJAX
 * */
function tab(value) {
	if (value == 'crono') {
		document.getElementById("tblCresc").style.display = "none";
       	document.getElementById("tblId").style.display = "none";
       	document.getElementById("tblCrono").style.display = "inline-table";
    }	else if (value == 'cresc'){
    	document.getElementById("tblCrono").style.display = "none";
    	document.getElementById("tblId").style.display = "none";
       	document.getElementById("tblCresc").style.display = "inline-table";
    } else if (value == 'id'){
    	document.getElementById("tblCresc").style.display = "none";
    	document.getElementById("tblCrono").style.display = "none";
    	document.getElementById("tblId").style.display = "inline-table";
    } else {
    	document.getElementById("tblCresc").style.display = "none";
       	document.getElementById("tblId").style.display = "none";
       	document.getElementById("tblCrono").style.display = "none";
    }
}