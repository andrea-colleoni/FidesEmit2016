<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="helloWorld" class="com.gianluca.EventiSpring.HelloWorld">
		<property name="message" value="Hello World! from EventiSpring" />
	</bean>
	
	<bean id="contextStartEventHandler" class="com.gianluca.EventiSpring.ContextStartEventHandler" />
	
	<bean id="contextStopEventHandler" class="com.gianluca.EventiSpring.ContextStopEventHandler" />

</beans>
